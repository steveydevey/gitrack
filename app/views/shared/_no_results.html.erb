<div style="text-align: center; padding: 40px 20px; margin-top: 20px;">
  <svg width="120" height="120" viewBox="0 0 120 120" xmlns="http://www.w3.org/2000/svg" style="margin-bottom: 20px;">
    <!-- Left arm (shrug) -->
    <line x1="20" y1="60" x2="10" y2="50" stroke="#666" stroke-width="3" stroke-linecap="round"/>
    <!-- Left hand -->
    <circle cx="10" cy="50" r="3" fill="#666"/>

    <!-- Underscore (left) -->
    <line x1="25" y1="48" x2="35" y2="48" stroke="#666" stroke-width="2.5" stroke-linecap="round"/>

    <!-- Face circle -->
    <circle cx="60" cy="60" r="25" fill="#FFD700" stroke="#666" stroke-width="2"/>

    <!-- Eyes -->
    <circle cx="52" cy="55" r="3" fill="#333"/>
    <circle cx="68" cy="55" r="3" fill="#333"/>

    <!-- Smile (ãƒ„) -->
    <path d="M 50 65 Q 60 72 70 65" fill="none" stroke="#333" stroke-width="2.5" stroke-linecap="round"/>

    <!-- Underscore (right) -->
    <line x1="85" y1="48" x2="95" y2="48" stroke="#666" stroke-width="2.5" stroke-linecap="round"/>

    <!-- Right arm (shrug) -->
    <line x1="100" y1="60" x2="110" y2="50" stroke="#666" stroke-width="3" stroke-linecap="round"/>
    <!-- Right hand -->
    <circle cx="110" cy="50" r="3" fill="#666"/>

    <!-- Slash (/) through face -->
    <line x1="40" y1="80" x2="50" y2="45" stroke="#666" stroke-width="2.5" stroke-linecap="round" opacity="0.7"/>
  </svg>

  <p style="color: #666; font-size: 18px; margin-top: 10px;">
    <% if local_assigns[:message] %>
      <%= message %>
    <% else %>
      No results yet
    <% end %>
  </p>

  <% if local_assigns[:links] %>
    <div style="margin-top: 15px; color: #000;">
      <%= links %>
    </div>
  <% end %>
</div>
